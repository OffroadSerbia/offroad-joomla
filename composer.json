{
  "name": "offroadserbia/joomla-dev",
  "description": "Monorepo for Joomla development (plugins/modules/templates) for OffRoad Serbia.",
  "type": "project",
  "license": "MIT",
  "require": {
    "php": ">=8.1"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.10",
    "phpstan/phpstan": "^1.11"
  },
  "autoload": {
    "psr-4": {
      "OffroadSerbia\\": "src/",
      "JoomlaBoost\\Plugin\\System\\JoomlaBoost\\": "src/plugins/system/joomlaboost/src/"
    }
  },
  "scripts": {
    "lint": "PHPCS_ENABLE_COLORS=0 vendor/bin/phpcs -n --no-colors -p -s --standard=phpcs.xml --extensions=php,inc,php3,php4",
    "stan": "vendor/bin/phpstan analyse --memory-limit=1G"
  }
}
