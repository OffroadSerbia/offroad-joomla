    <description>PLG_CONTENT_OFFROADMETA_DESCRIPTION</description>
    
    <files>
        <filename plugin="offroadmeta">offroadmeta.php</filename>
        <folder>src</folder>
        <folder>language</folder>
    </files>
    
    <languages>
        <language tag="sr-RS">language/sr-RS/plg_content_offroadmeta.ini</language>
        <language tag="sr-RS">language/sr-RS/plg_content_offroadmeta.sys.ini</language>
        <language tag="en-GB">language/en-GB/plg_content_offroadmeta.ini</language>
        <language tag="en-GB">language/en-GB/plg_content_offroadmeta.sys.ini</language>
    </languages>
    
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field
                    name="auto_og"
                    type="radio"
                    label="PLG_CONTENT_OFFROADMETA_AUTO_OG_LABEL"
                    description="PLG_CONTENT_OFFROADMETA_AUTO_OG_DESC"
                    default="1"
                    class="btn-group btn-group-yesno"
                    >
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field
                    name="auto_schema"
                    type="radio"
                    label="PLG_CONTENT_OFFROADMETA_AUTO_SCHEMA_LABEL"
                    description="PLG_CONTENT_OFFROADMETA_AUTO_SCHEMA_DESC"
                    default="1"
                    class="btn-group btn-group-yesno"
                    >
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
            </fieldset>
        </fields>
