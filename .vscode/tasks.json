{
  // VS Code tasks for quick Git automation
  "version": "2.0.0",
  "inputs": [
    {
      "id": "commitMessage",
      "type": "promptString",
      "description": "Commit message",
      "default": "chore: quick push"
    }
  ],
  "tasks": [
    {
      "label": "Git: Quick Push",
      "type": "shell",
      "command": "pwsh",
      "args": [
        "-NoProfile",
        "-ExecutionPolicy",
        "Bypass",
        "-File",
        "${workspaceFolder}/tools/git-quick-push.ps1",
        "-Message",
        "${input:commitMessage}"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    },
    {
      "label": "Git: Quick Push (Deploy only)",
      "type": "shell",
      "command": "pwsh",
      "args": [
        "-NoProfile",
        "-ExecutionPolicy",
        "Bypass",
        "-File",
        "${workspaceFolder}/tools/git-quick-push.ps1",
        "-Message",
        "${input:commitMessage} [skip ci]"
      ],
      "problemMatcher": []
    },
    {
      "label": "Git: Quick Push (CI only)",
      "type": "shell",
      "command": "pwsh",
      "args": [
        "-NoProfile",
        "-ExecutionPolicy",
        "Bypass",
        "-File",
        "${workspaceFolder}/tools/git-quick-push.ps1",
        "-Message",
        "${input:commitMessage} [skip deploy]"
      ],
      "problemMatcher": []
    }
  ]
}
